all: bin bin/exampleClassMain bin/exampleClassWithoutMoveMain

compiler=g++

bin:
	mkdir -p bin

 bin/exampleClassMain: bin src/exampleClassMain.cpp src/exampleClass.cpp include/exampleClass.h
	${compiler} -std=c++17 -o  $@ -g -Wall $? -Iinclude

bin/exampleClassWithoutMoveMain: bin src/exampleClassMain.cpp src/exampleClass.cpp include/exampleClass.h
	${compiler} -std=c++17 -o  $@ -g -Wall $? -Iinclude -DWITHOUT_MOVE
 
valgrind: bin/main
	valgrind -v --leak-check=yes --track-origins=yes --leak-check=full --show-leak-kinds=all bin/main

printMain:
	enscript -C -T 2 -p - -M Letter -Ec --color -fCourier8 src/main.c  | ps2pdf - bin/main.pdf

runMe: bin/main
	bin/main
	
clean:
	rm -rf bin/main bin/*.o bin/main.dSYM
